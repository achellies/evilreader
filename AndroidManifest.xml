<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evilreader.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TESTActivity"
            android:label="@string/title_activity_test" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.evilreader.android.MainActivity"
            android:label="@string/title_activity_main" >

        </activity>
        <activity
            android:name="com.evilreader.android.library.LibraryActivity"
            android:icon="@drawable/ic_rating_good"
            android:label="@string/title_activity_library"
            android:screenOrientation="sensor"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name=".evilcontentcontroller.EpubContentActivity"
            android:label="@string/title_activity_epub_content" >
        </activity>
        
    </application>

</manifest>